---
const hasTitle = Astro.slots.has('title')
---

<div class='col-span-6 flex flex-col gap-3' data-component='List'>
  {
    hasTitle && (
      <div class='font-sans text-xs font-medium uppercase'>
        <slot name='title' />
      </div>
    )
  }
  <ul class='flex flex-col gap-1.5 font-sans text-sm'>
    <slot />
  </ul>
</div>
